---
import BaseLayout from '../layouts/BaseLayout.astro';
import ButtonDefault from '../components/ButtonDefault.astro';
import BannerFooterSection from '../components/BannerFooterSection.astro';
---

<script
	type="text/javascript"
	src="https://assets.calendly.com/assets/external/widget.js"
></script>

<style>
	.calendly-widget-overlay {
		position: fixed;
		display: none;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 9999;
		cursor: pointer;
	}

	.calendly-inline-widget {
		position: absolute;
		width: 100%;
		height: 100%;
		z-index: 9999;
		/* display: none; */
	}

	.calendly-widget-close {
		z-index: 999999;
		padding: 2rem;
		color: #fff;
		position: absolute;
		top: 0;
		right: 0;
	}

	.testimonial-container {
		background: no-repeat url('/images/wave-pink.svg');
		background-size: contain;
		background-position: bottom right;
		background-color: #ffecf7;
	}

	@media (max-width: 520px) {
		.testimonial-container {
			background-position: bottom -40px right -20px;
		}
	}
</style>

<BaseLayout title="Tensaw.health | No hassle patient marketing for physicians">
	<main>
		<div class="container md:max-w-full">
			<!-- Hero -->
			<div
				class="max-w-[85rem] px-4 py-12 sm:px-6 lg:px-16 lg:pb-16 lg:py-16 mx-auto"
			>
				<!-- Grid -->
				<div class="max-w-5xl">
					<div>
						<h1
							class="block text-5xl tracking-tighter font-bold text-slate-900 lg:text-8xl lg:leading-none dark:text-white"
						>
							No hassle patient marketing for <span
								class="text-transparent bg-clip-text bg-gradient-to-r from-[#FD3E81] to-[#486DD0] background-animate pr-0.5"
								>physicians</span
							>
						</h1>
						<p
							class="mt-6 font-inter text-lg max-w-2xl text-gray-800 dark:text-gray-400"
						>
							We help physicians find new patients and grow their medical
							practice. If you are not marketing to find your patients, your
							competition is acquiring them.
						</p>

						<button
							type="button"
							class="py-3 px-4 mt-6 inline-flex calendly-open-button justify-center items-center gap-2 font-medium rounded-md border border-transparent bg-[#FD3E81] text-white hover:bg-[#E43975] focus:outline-none focus:ring-2 focus:ring-[#E43975] focus:ring-offset-2 transition-all dark:focus:ring-offset-gray-800"
						>
							<a onclick="openCalendlyWidget()" href="#calendly">
								Get Started
							</a>
						</button>
					</div>
					<!-- End Col -->
				</div>
				<!-- End Grid -->
			</div>
			<!-- End Hero -->

			<!-- Testimonials -->
			<div class="relative overflow-hidden">
				<div class="max-w-[85rem] px-4 py-12 sm:px-6 lg:px-16 lg:py-16 mx-auto">
					<!-- Gradients -->
					<div aria-hidden="true" class="flex absolute left-0 -z-[1]">
						<div
							class="bg-purple-200 opacity-20 blur-3xl w-[1036px] h-[300px] dark:bg-purple-900 dark:opacity-20"
						>
						</div>
					</div>
					<!-- End Gradients -->

					<!-- Grid -->
					<div
						class="testimonial-container bg-[#ffecf7] p-8 py-10 lg:grid lg:grid-cols-6 lg:gap-8 lg:items-center rounded-md"
					>
						<div class="lg:col-span-4">
							<!-- Blockquote -->
							<blockquote>
								<p
									class="font-medium text-gray-800 lg:text-3xl lg:leading-normal dark:text-gray-200"
								>
									“We have been using tensaw for about 2 months now. In that
									time, we've seen a <span class="text-[#FD3E81]">6X</span> increase
									in Google reviews! It's simply amazing!”
								</p>

								<footer class="mt-6">
									<div class="flex items-center gap-4">
										<div class="">
											<img
												class="w-24 h-auto rounded-full"
												src="/images/DrAligeti-avatar.png"
												alt="Dr. Aligeti - Beats Cardiology"
											/>
										</div>
										<div class="ml-4 lg:ml-0">
											<p class="font-medium text-gray-800 dark:text-gray-200">
												Dr. Aligeti
											</p>
											<p class="text-sm text-gray-600 dark:text-gray-400">
